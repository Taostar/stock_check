# Holdings endpoint (your ngrok URL)
HOLDINGS_ENDPOINT_URL=https://your-ngrok-url.ngrok.io/api/holdings
HOLDINGS_AUTH_TOKEN=

# LLM (agnostic - choose provider)
LLM_PROVIDER=anthropic  # openai, anthropic, or local
LLM_MODEL=claude-3-sonnet-20240229
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
LOCAL_LLM_URL=http://localhost:11434

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_CRON=0 9,16 * * 1-5  # 9AM and 4PM weekdays

# Thresholds
FLUCTUATION_THRESHOLD=5.0

# Cache Settings
EARNINGS_CACHE_HOURS=4
NEWS_CACHE_MINUTES=30
